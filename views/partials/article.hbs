<!-- Featured Article Splash -->
<div class="image-box">
<a href="#">
    <!-- Dimmer + Vignette -->
    <div class="image-dimmer"></div>
    <!-- Featured Image  -->
    <img src="img/articles/{{article.key}}.{{article.imgext}}">
    <!-- Featured Text -->
    <div class="text-block text-light centered">
        <h4>{{article.title}}</h4>
